# 1Ô∏è‚É£ Update system packages
sudo apt update -y
sudo apt upgrade -y

# 2Ô∏è‚É£ Install Java 17 (Jenkins requires Java 17 or higher)
sudo apt install openjdk-17-jdk -y

# Verify Java version
java -version

# 3Ô∏è‚É£ (Optional) Set Java 17 as default if multiple versions exist
sudo update-alternatives --config java
# üëâ Select the number corresponding to Java 17

# 4Ô∏è‚É£ Add Jenkins GPG key (latest keyring method)
curl -fsSL https://pkg.jenkins.io/debian-stable/jenkins.io-2023.key | sudo tee \
  /usr/share/keyrings/jenkins-keyring.asc > /dev/null

# 5Ô∏è‚É£ Add Jenkins repository to system sources
echo deb [signed-by=/usr/share/keyrings/jenkins-keyring.asc] \
  https://pkg.jenkins.io/debian-stable binary/ | \
  sudo tee /etc/apt/sources.list.d/jenkins.list > /dev/null

# 6Ô∏è‚É£ Update package index to recognize new Jenkins repo
sudo apt update -y

# 7Ô∏è‚É£ Install Jenkins
sudo apt install jenkins -y

# 8Ô∏è‚É£ Enable Jenkins service on system boot
sudo systemctl enable jenkins

# 9Ô∏è‚É£ Start Jenkins service
sudo systemctl start jenkins

# üîü Check Jenkins service status
sudo systemctl status jenkins

# 1Ô∏è‚É£1Ô∏è‚É£ Get the initial admin password (needed for first-time login)
sudo cat /var/lib/jenkins/secrets/initialAdminPassword

# 1Ô∏è‚É£2Ô∏è‚É£ (Optional) Access Jenkins Web UI
# Open browser and go to:
# http://localhost:8080
